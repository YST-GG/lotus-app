    <!--调用公共头部回调函数-->
    <script>
        $(function(){
            $("#header").load("/public_header");
        }) 
     </script>
    <script>
    // 点击登录，检查登录成功与否
    function checkLogin(){
         $.ajax({
            type:"GET",
            url:"http://47.100.10.123:10080/pool/pool_user_login",
            data:{name:$("#inputEmail").val(),
                password:$("#inputPassword").val()
                },
            success:function(data){
                if(data.msg=="用户不存在"){
                    $("#code").html("*用户不存在,请注册!*");
                    $("#code").css("color","red");
                    setInterval(()=>{
                        window.location.href="/powerregist";
                    },1000) 

                }else if(data.msg=="密码错误"){
                    ShowFailure("密码错误,请重试!");
                    setInterval(()=>{
                        window.location.href="";
                    },1000)
                }else {
                    ShowSuccess("登陆成功")
                    setInterval(()=>{
                        window.location.href="/poweruser";
                    },800)
                }
            }
         })
    }

    'use strict';
    var mySwiper = new Swiper('.swiper-signin', {
        slidesPerView: 1,
        spaceBetween: 0,
        autoplay: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        }
    });

    $(window).on('resize', function() {
        var mySwiper = new Swiper('.swiper-signin', {
            slidesPerView: 1,
            spaceBetween: 0,
            autoplay: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            }
        });
    });
    </script>
